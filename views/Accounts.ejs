  <script>
    // Filter buttons functionality
    const filterButtons = document.querySelectorAll('.filter-btn');
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        showToast('Filter applied: ' + button.textContent);
      });
    });
    
    // Action buttons functionality
    const viewButtons = document.querySelectorAll('.view-btn');
    viewButtons.forEach(button => {
      button.addEventListener('click', () => {
        const poNumber = button.closest('tr').querySelector('td:first-child').textContent;
        showToast('Viewing details for: ' + poNumber);
      });
    });
    
    // Download buttons functionality
    const downloadButtons = document.querySelectorAll('.download-btn');
    downloadButtons.forEach(button => {
      button.addEventListener('click', () => {
        const poNumber = button.closest('tr').querySelector('td:first-child').textContent;
        showToast('Downloading invoice for: ' + poNumber);
      });
    });
    
    // Pagination buttons functionality
    const paginationButtons = document.querySelectorAll('.pagination-btn');
    paginationButtons.forEach(button => {
      button.addEventListener('click', () => {
        if (!button.querySelector('i')) {
          paginationButtons.forEach(btn => btn.classList.remove('active'));
          button.classList.add('active');
          showToast('Page ' + button.textContent + ' loaded');
        }
      });
    });
    
    // Show toast notification
    function showToast(message, isError = false) {
      const toast = document.getElementById('toast');
      toast.querySelector("span").textContent = message;
      
      if (isError) {
        toast.classList.add("error");
      } else {
        toast.classList.remove("error");
      }
      
      toast.classList.add("show");
      
      setTimeout(() => {
        toast.classList.remove("show");
      }, 3000);
    }
    
    function logout() {
      showToast("ðŸšª Logged out successfully!");
      setTimeout(() => {
        window.location.href = "login.html";
      }, 1000);
    }
  </script>
