  <script>
    const slider = document.getElementById('challan-table-container');
let isDown = false;
let startX;
let scrollLeft;

slider.addEventListener('mousedown', (e) => {
  isDown = true;
  slider.classList.add('active'); // optional, for styling cursor
  startX = e.pageX - slider.offsetLeft;
  scrollLeft = slider.scrollLeft;
  slider.style.cursor = 'grabbing';
});

slider.addEventListener('mouseleave', () => {
  isDown = false;
  slider.style.cursor = 'grab';
});

slider.addEventListener('mouseup', () => {
  isDown = false;
  slider.style.cursor = 'grab';
});

slider.addEventListener('mousemove', (e) => {
  if (!isDown) return;
  e.preventDefault();
  const x = e.pageX - slider.offsetLeft;
  const walk = (x - startX) * 1; // scroll-fast factor
  slider.scrollLeft = scrollLeft - walk;
});

    // Fetch and populate purchase orders
    async function loadOrders() {
      try {
        const response = await fetch('/api/inventory-orders');
        const orders = await response.json();
        const selectStore = document.getElementById('order_id_store');
        const selectLocal = document.getElementById('order_id_local');
        selectStore.innerHTML = '<option value="">Select an order</option>';
        // For local, it's an input field, so don't populate
        if (selectLocal.tagName === 'SELECT') {
          selectLocal.innerHTML = '<option value="">Select an order</option>';
          orders.forEach(order => {
            const optionLocal = document.createElement('option');
            optionLocal.value = order.id;
            optionLocal.textContent = `${order.order_id} - ${order.project} (${order.supplier})`;
            selectLocal.appendChild(optionLocal);
          });
        }
        orders.forEach(order => {
          const optionStore = document.createElement('option');
          optionStore.value = order.id;
          optionStore.textContent = `${order.order_id} - ${order.project} (${order.supplier})`;
          selectStore.appendChild(optionStore);
        });
      } catch (error) {
        console.error('Error loading orders:', error);
      }
    }

    document.addEventListener('DOMContentLoaded', loadOrders);

    function switchTab(tabName) {
      // Hide all tab contents
      document.querySelectorAll('.tab-content').forEach(tab => {
        tab.classList.remove('active');
      });
      // Remove active from menu items
      document.querySelectorAll('.menu-item').forEach(item => {
        item.classList.remove('active');
      });
      // Show selected tab
      document.getElementById(tabName).classList.add('active');
      // Activate menu item
      document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');

      // Load data for specific tabs
      if (tabName === 'delivery-challan') {
        loadChallans();
      }
    }

    async function loadChallans() {
      try {
        const response = await fetch('/api/delivery-challans');
        const challans = await response.json();
        const tbody = document.getElementById('challan-tbody');
        tbody.innerHTML = '';

        challans.forEach(challan => {
          const row = document.createElement('tr');
          row.style.borderBottom = '1px solid #e5e7eb';

          const challanDate = new Date(challan.challan_date).toLocaleDateString();
          const expiryDate = challan.expiry_date ? new Date(challan.expiry_date).toLocaleDateString() : 'N/A';
          let daysToReturn = 'N/A';
          let status = 'Active';

          if (challan.expiry_date) {
            const today = new Date();
            const expiry = new Date(challan.expiry_date);
            const diffTime = expiry - today;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            daysToReturn = diffDays;
            if (diffDays < 0) {
              status = 'Overdue';
            } else if (diffDays <= 5) {
              status = 'Due Soon';
            } else if (diffDays <= 10) {
              status = 'Approaching';
            }
          }

          row.innerHTML = `
            <td style="padding: 12px; color: #374151;">${challan.challan_no}</td>
            <td style="padding: 12px; color: #374151;">${challanDate}</td>
            <td style="padding: 12px; color: #374151;">${challan.consignee_name}</td>
            <td style="padding: 12px; color: #374151;">${challan.requester}</td>

            <td style="padding: 12px; color: #374151;">${challan.dc_type}</td>
            <td style="padding: 12px; color: #374151;">${expiryDate}</td>
            <td style="padding: 12px; color: #374151; ${daysToReturn !== 'N/A' && daysToReturn < 0 ? 'background-color: #dc2626; color: white;' : daysToReturn <= 5 ? 'background-color: #dc2626; color: white;' : daysToReturn <= 10 ? 'background-color: #d97706; color: white;' : 'background-color: #16a34a; color: white;'}">${daysToReturn}</td>
            <td style="padding: 12px; color: #374151;">${status}</td>
<td style="padding: 12px; color: #374151; display: flex; align-items: center; gap: 12px;">
  <i class="fas fa-eye" style="cursor: pointer; color: #2563eb;" onclick="viewItems(${challan.id})"></i>
  <button 
    style="padding:6px 12px; background-color:#dc2626; color:white; border:none; border-radius:6px; cursor:pointer; font-size:14px; font-weight:500;"
    style="margin-left:30px;"
    onclick="dc_close(${challan.id}, this)">
    Close
  </button>
</td>
          `;

          tbody.appendChild(row);
        });
      } catch (error) {
        console.error('Error loading challans:', error);
        showPopup('Error', 'Failed to load delivery challans.', 'error');
      }
    }

    async function viewItems(challanId) {
      try {
        const response = await fetch(`/api/delivery-challan/${challanId}/items`);
        const items = await response.json();

        const content = document.getElementById('items-content');
        if (items.length === 0) {
          content.innerHTML = '<p>No items found for this challan.</p>';
        } else {
          let html = '<table style="width: 100%; border-collapse: collapse;">';
          html += '<thead><tr style="background: #f9fafb;">';
          html += '<th style="padding: 8px; border: 1px solid #e5e7eb; text-align: left;">Part No</th>';
          html += '<th style="padding: 8px; border: 1px solid #e5e7eb; text-align: left;">Description</th>';
          html += '<th style="padding: 8px; border: 1px solid #e5e7eb; text-align: left;">HSN</th>';
          html += '<th style="padding: 8px; border: 1px solid #e5e7eb; text-align: left;">Quantity</th>';
          html += '<th style="padding: 8px; border: 1px solid #e5e7eb; text-align: left;">Unit</th>';
          html += '<th style="padding: 8px; border: 1px solid #e5e7eb; text-align: left;">Remarks</th>';
          html += '</tr></thead><tbody>';

          items.forEach(item => {
            html += '<tr>';
            html += `<td style="padding: 8px; border: 1px solid #e5e7eb;">${item.part_no || ''}</td>`;
            html += `<td style="padding: 8px; border: 1px solid #e5e7eb;">${item.description || ''}</td>`;
            html += `<td style="padding: 8px; border: 1px solid #e5e7eb;">${item.hsn || ''}</td>`;
            html += `<td style="padding: 8px; border: 1px solid #e5e7eb;">${item.quantity || ''}</td>`;
            html += `<td style="padding: 8px; border: 1px solid #e5e7eb;">${item.unit || ''}</td>`;
            html += `<td style="padding: 8px; border: 1px solid #e5e7eb;">${item.remarks || ''}</td>`;
            html += '</tr>';
          });

          html += '</tbody></table>';
          content.innerHTML = html;
        }

        document.getElementById('items-modal').style.display = 'flex';
      } catch (error) {
        console.error('Error loading items:', error);
        showPopup('Error', 'Failed to load challan items.', 'error');
      }
    }

    function closeModal() {
      document.getElementById('items-modal').style.display = 'none';
    }
     async function dc_close(id, btn) {
  try {
    const response = await fetch('/update/dc/close', {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ order_id: id })
    });

    if (!response.ok) {
      throw new Error('Failed to close DC');
    }

    showPopup('Success', `Delivery challan [id: ${id}] is successfully Closed!`, 'success');

    // Remove the table row
    const row = btn.closest('tr');
    if (row) row.remove();

  } catch (error) {
    console.error('Error Closing Delivery Challan:', error);
    showPopup('Error', 'Error closing delivery challan', 'error');
  }
}

