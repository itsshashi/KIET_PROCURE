// Update status
async function updateStatus(id, status) {
  console.log(`üîÑ Frontend: Function called with id=${id}, status=${status}`);

  try {
    console.log(`üîÑ Frontend: Sending request to /api/orders/${id}/status`);
    const res = await fetch(`/api/orders/${id}/status`, {
      method: "PUT",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ status })
    });

    console.log(`üîÑ Frontend: Response received, status: ${res.status}`);

    if (res.ok) {
      const data = await res.json();
      console.log(`‚úÖ Frontend: Update successful`, data);

      alert(`‚úÖ Order ${id} ${status} successfully!`);
      loadSummaryCounts();

      // üî• Handle tab reloads properly
      if (status === "rejected") {
        // Refresh rejected tab so the order moves there
        loadRejectedOrders();

        // Also refresh pending so it disappears
        if (currentTab === "pending") {
          loadPurchaseOrders();
        }
      } else if (status === "approved") {
        if (currentTab === "pending") loadPurchaseOrders();
        else if (currentTab === "all") loadAllOrders();
      } else {
        if (currentTab === "all") loadAllOrders();
        else if (currentTab === "quotations") loadAllQuotations();
      }
    } else {
      const err = await res.json();
      console.log(`‚ùå Frontend: Update failed`, err);
      alert(`‚ùå Failed: ${err.error || 'Unknown error'}`);
    }
  } catch (error) {
    console.error(`‚ùå Frontend: Network error`, error);
    alert(`‚ùå Network error: ${error.message}`);
  }
}

















