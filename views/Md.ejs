    </div>
    
    <!-- Order Details Modal -->
    <div class="modal" id="orderModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Order Details</h2>
                <button class="close-btn" onclick="closeModal()">&times;</button>
            </div>
            <div class="order-details">
                <div class="detail-group">
                    <label>Order ID</label>
                    <div class="value" id="modal-orderId">#ORD-001</div>
                </div>
                <div class="detail-group">
                    <label>Status</label>
                    <div class="value"><span class="status-badge status-pending" id="modal-status">Pending</span></div>
