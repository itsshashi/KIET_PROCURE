                    <div class="value" id="modal-quotation"><a href="#">quotation_network.pdf</a></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Sample order data
        const orders = [
            {
                id: 1,
                orderId: "#ORD-001",
                productName: "Network Switches",
                serialNumber: "NS-7822-5G",
                cost: "$1,250.00",
                description: "10 port gigabit network switches with PoE support",
                supplierName: "Network Solutions Inc.",
                supplierEmail: "orders@netsolutions.com",
                dateRequested: "August 15, 2023",
                dateRequired: "September 10, 2023",
                status: "pending",
                quotation: "quotation_network.pdf"
            },
            {
                id: 2,
                orderId: "#ORD-002",
                productName: "Laptop Dell XPS 15",
                serialNumber: "DL-XPS15-1022",
                cost: "$1,899.99",
                description: "Dell XPS 15 laptop with 16GB RAM, 1TB SSD, Intel i7",
                supplierName: "Dell Technologies",
                supplierEmail: "sales@dell.com",
                dateRequested: "August 10, 2023",
                dateRequired: "August 25, 2023",
                status: "approved",
                quotation: "quotation_dell.pdf"
            },
            {
                id: 3,
                orderId: "#ORD-003",
                productName: "Projector Epson EB-1985",
                serialNumber: "EP-EB1985-77",
                cost: "$1,575.50",
                description: "Epson EB-1985 5000 lumens HD projector",
                supplierName: "Epson Direct",
                supplierEmail: "quotes@epson.com",
                dateRequested: "July 28, 2023",
                dateRequired: "August 15, 2023",
                status: "rejected",
                quotation: "quotation_epson.pdf"
            },
            {
                id: 4,
                orderId: "#ORD-004",
                productName: "Office Chairs (Set of 5)",
                serialNumber: "OF-CHR5-3398",
                cost: "$2,350.00",
                description: "Ergonomic office chairs with lumbar support",
                supplierName: "Office Comfort Inc.",
                supplierEmail: "info@officecomfort.com",
                dateRequested: "August 05, 2023",
                dateRequired: "September 05, 2023",
                status: "approved",
                quotation: "quotation_chairs.pdf"
            },
            {
                id: 5,
                orderId: "#ORD-005",
                productName: "Server Rack Cabinet",
                serialNumber: "SR-42U-1000",
                cost: "$3,200.00",
                description: "42U server rack cabinet with cooling system",
                supplierName: "DataCenter Equipment Ltd.",
                supplierEmail: "sales@dcequipment.com",
                dateRequested: "August 20, 2023",
                dateRequired: "September 30, 2023",
                status: "pending",
                quotation: "quotation_rack.pdf"
            }
        ];

        // View order details
        function viewOrder(orderId) {
            const order = orders.find(o => o.id === orderId);
            if (order) {
                document.getElementById('modal-orderId').textContent = order.orderId;
                document.getElementById('modal-productName').textContent = order.productName;
                document.getElementById('modal-serialNumber').textContent = order.serialNumber;
                document.getElementById('modal-cost').textContent = order.cost;
                document.getElementById('modal-description').textContent = order.description;
                document.getElementById('modal-supplierName').textContent = order.supplierName;
                document.getElementById('modal-supplierEmail').textContent = order.supplierEmail;
                document.getElementById('modal-dateRequested').textContent = order.dateRequested;
                document.getElementById('modal-dateRequired').textContent = order.dateRequired;
                document.getElementById('modal-quotation').innerHTML = `<a href="#">${order.quotation}</a>`;
                
                // Update status badge
                const statusBadge = document.getElementById('modal-status');
                statusBadge.textContent = order.status.charAt(0).toUpperCase() + order.status.slice(1);
                statusBadge.className = 'status-badge';
                if (order.status === 'pending') {
                    statusBadge.classList.add('status-pending');
                } else if (order.status === 'approved') {
                    statusBadge.classList.add('status-approved');
                } else if (order.status === 'rejected') {
                    statusBadge.classList.add('status-rejected');
                }
                
                // Show modal
                document.getElementById('orderModal').style.display = 'flex';
            }
        }

        // Close modal
        function closeModal() {
            document.getElementById('orderModal').style.display = 'none';
        }

        // Close modal if clicked outside
        window.onclick = function(event) {
            const modal = document.getElementById('orderModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Refresh button
        document.getElementById('refreshBtn').addEventListener('click', function() {
            this.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Refreshing...';
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-sync-alt"></i> Refresh';
                alert('Data refreshed successfully!');
            }, 1500);
        });

        // Export button
        document.getElementById('exportBtn').addEventListener('click', function() {
            this.innerHTML = '<i class="fas fa-download"></i> Exporting...';
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-file-export"></i> Export Data';
                alert('Data exported successfully!');
            }, 1500);
        });

        // Apply filters
        document.getElementById('applyFilters').addEventListener('click', function() {
            const statusFilter = document.getElementById('statusFilter').value;
            const dateFrom = document.getElementById('dateFrom').value;
            const dateTo = document.getElementById('dateTo').value;
            const search = document.getElementById('search').value.toLowerCase();
            
            // In a real application, this would filter the data from the server
            // For this demo, we'll just show an alert
            let filterMsg = "Applying filters: ";
            if (statusFilter !== 'all') filterMsg += `Status: ${statusFilter}, `;
            if (dateFrom) filterMsg += `From: ${dateFrom}, `;
            if (dateTo) filterMsg += `To: ${dateTo}, `;
            if (search) filterMsg += `Search: ${search}`;
            
            alert(filterMsg);
        });

        // Set today's date as default for dateTo
        document.getElementById('dateTo').valueAsDate = new Date();
    </script>
      <% if (message) { %>
    <script>
      alert("<%= message %>");
    </script>
  <% } %>
</body>
</html>