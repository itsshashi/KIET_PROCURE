function exportToExcel() {
      const table = document.getElementById('costCalculationTable');
      const rows = table.querySelectorAll('tbody tr');
      const totalCostText = document.getElementById('totalCost').textContent;
      const totalCostValue = parseFloat(totalCostText.replace(/,/g, '')) || 0;

      if (rows.length === 0 || rows[0].cells[0].textContent === 'No orders found for the entered project code.') {
        alert('No data to export.');
        return;
      }

      const data = [];

      // Add header row
      const headers = ['Order ID', 'Project', 'Project Code', 'Supplier', 'Requested By', 'Date Required', 'Created At', 'Base Amount','GST','Total', 'Status', 'Quotations'];
      data.push(headers);

      // Add data rows
      rows.forEach(row => {
        const rowData = [];
        for (let i = 0; i < row.cells.length - 1; i++) { // Exclude Actions column
          rowData.push(row.cells[i].textContent.trim());
        }
        data.push(rowData);
      });

      // Add total cost row
      data.push(['', '', '', '', '', '', '', '', '', 'Total Cost(no GST): â‚¹' + totalCostValue.toLocaleString('en-IN', { minimumFractionDigits: 2 })]);


      // Create workbook and worksheet
      const wb = XLSX.utils.book_new();
      const ws = XLSX.utils.aoa_to_sheet(data);

      // Auto-size columns
      const colWidths = headers.map(header => ({ wch: Math.max(header.length, 10) }));
      ws['!cols'] = colWidths;

      XLSX.utils.book_append_sheet(wb, ws, 'Cost Calculation');

      // Download file
      XLSX.writeFile(wb, 'Cost_Calculation.xlsx');
    }




    
