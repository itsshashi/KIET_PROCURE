  // âœ… 5ï¸âƒ£ Render cost calculation table
  function renderCostCalculationTable(orders) {
    const tbody = document.getElementById("costCalculationTable");
    tbody.innerHTML = "";
    const GST_RATE = 0.18;
    let totalBaseAmount = 0;

    if (orders.length === 0) {
      tbody.innerHTML = `
        <tr>
          <td colspan="13" class="text-center py-8 text-gray-500">
            No orders found for the entered project code.
          </td>
        </tr>`;
      document.getElementById('totalCost').textContent = '0.00';
      return;
    }

    orders.forEach(order => {
      const totalAmount = Number(order.total_amount) || 0;
      const baseAmount = totalAmount / (1 + GST_RATE);
      const gstAmount = totalAmount - baseAmount;
      totalBaseAmount += baseAmount;

      const statusBadgeClass = `status-badge status-${order.status}`;
      const isSingleSupplier =
        order.single === true || order.single === 'true' || order.single === 1;

      const tr = document.createElement("tr");
      tr.className = "hover:bg-gray-50";

      tr.innerHTML = `
        <td class="px-2 py-3 font-medium">${order.order_id}</td>
        <td class="px-2 py-3">${order.project}</td>
        <td class="px-2 py-3">${order.projectcodenumber || ''}</td>
        <td class="px-2 py-3">${order.supplier}</td>
        <td class="px-2 py-3">${order.requested_by}</td>
        <td class="px-2 py-3">${formatDate(order.date_required)}</td>
        <td class="px-2 py-3">${formatDate(order.created_at)}</td>
        <td class="px-2 py-3 font-semibold">â‚¹${baseAmount.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</td>
        <td class="px-2 py-3 font-semibold">â‚¹${gstAmount.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</td>
        <td class="px-2 py-3 font-semibold">â‚¹${totalAmount.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</td>
        <td class="px-2 py-3"><span class="${statusBadgeClass}">${capitalizeFirst(order.status)}</span></td>
        <td class="px-2 py-3">
          <div class="flex items-center gap-2 justify-center">
            <i class="fas fa-file-pdf text-red-500"></i>
            <span class="text-sm text-gray-600">
              ${order.quotation_file && order.quotation_file.length > 0
                ? order.quotation_file.length + ' file' + (order.quotation_file.length > 1 ? 's' : '')
                : 'No files'}
            </span>
          </div>
        </td>
        <td class="px-2 py-3">
          <div class="flex gap-2 justify-center">
            <button onclick="viewQuotations(${order.id})"
              class="w-20 px-3 py-1 bg-blue-500 text-white rounded text-sm hover:bg-blue-600 transition flex items-center justify-center">
              <i class="fas fa-eye mr-1"></i>View
            </button>
            <button onclick="editOrder(${order.id})"
              class="w-20 px-3 py-1 ${isSingleSupplier ? 'bg-red-600 hover:bg-red-700' : 'bg-green-600 hover:bg-green-700'} text-white rounded text-sm transition flex items-center justify-center">
              <i class="fas fa-edit mr-1"></i>Edit
            </button>
            <button onclick="generatePO(${order.id})"
              class="w-20 px-3 py-1 ${(order.status === 'pending' || order.status === 'purchase') ? 'bg-gray-400' : 'bg-blue-600 hover:bg-blue-700'} text-white rounded text-sm transition flex items-center justify-center"
              ${(order.status === 'pending' || order.status === 'purchase') ? 'disabled' : ''}>
              <i class="fas fa-file-invoice mr-1"></i>P O
            </button>
          </div>
        </td>
      `;

      tbody.appendChild(tr);
    });

    document.getElementById('totalCost').textContent = totalBaseAmount.toLocaleString('en-IN', {
      minimumFractionDigits: 2
    });
  }

